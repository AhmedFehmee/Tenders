<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.tendercs.Contact_Us"
    android:background="@drawable/about_us">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="110dp">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/bt_gmail"
            android:background="@drawable/gmail" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/bt_face"
            android:background="@drawable/facebook"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/bt_twitter"
            android:background="@drawable/twiteer"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/bt_phone"
            android:background="@drawable/phonee"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</RelativeLayout>
