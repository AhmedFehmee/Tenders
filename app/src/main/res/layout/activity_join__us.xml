<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.tendercs.Join_Us"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="إسم الشركه"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_Name"
            android:layout_below="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:textSize="20sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="الايميل "
            android:id="@+id/textView7"
            android:layout_below="@+id/et_Name"
            android:layout_alignRight="@+id/textView3"
            android:layout_alignEnd="@+id/textView3"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/et_mail"
            android:layout_below="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="كلمه المرور"
            android:id="@+id/textView4"
            android:layout_below="@+id/et_mail"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_pass"
            android:layout_above="@+id/textView4"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="تاكيد كلمه المرور"
            android:id="@+id/textView5"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/et_pass"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_Con_pass"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textView5"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="رقم الهاتف"
            android:id="@+id/textView6"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffffff"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phone"
            android:layout_gravity="right"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create"
            android:id="@+id/btn_Create_account"
            android:layout_gravity="right"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:shadowColor="#FF010101"
            android:shadowDx="2"
            android:shadowDy="1.8"
            android:shadowRadius="2"/>
    </LinearLayout>

</RelativeLayout>
