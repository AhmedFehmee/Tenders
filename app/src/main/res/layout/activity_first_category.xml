<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahmed.tendercs.FirstCategory"
    android:background="@drawable/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvName"
                    android:textSize="20dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" إسم العمليه   "
                    android:id="@+id/textView10"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvNumber"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="رقم العمليه "
                    android:id="@+id/textView9"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvData"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تاريخ العمليه "
                    android:id="@+id/textView11"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvGeha"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="جهه النشر "
                    android:id="@+id/textView12"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvHay2a"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الهيئه المعلنه "
                    android:id="@+id/textView13"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvAdress"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="عنوان الهيئه "
                    android:id="@+id/textView14"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvPhone"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="تليفون الهيئه"
                    android:id="@+id/textView15"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tvDescribtion"
                    android:textSize="15dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="وصف العمليه "
                    android:id="@+id/textView16"
                    android:textSize="25dp"
                    android:shadowColor="#FFFFFFFF"
                    android:shadowDx="2"
                    android:shadowDy="1.8"
                    android:shadowRadius="2"
                    android:textColor="#ffffffff"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
